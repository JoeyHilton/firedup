
<div id="wrapper"><!-- START BODY CONTAINER -->
  

      <div id="sidebar-wrapper" class="col-md-2">
            <div id="sidebar">
                <ul class="nav list-group">
                    <li>
                        <%= link_to 'Post a Job', new_user_jboard_path(current_user), class: "list-group-item"%>
                    </li>
                    <!-- <li>
                        <%= link_to "Create A Post", new_user_post_path(current_user), class: "list-group-item" %>
                    </li>
                    <li>
                        <%= link_to "Show Messages", user_messages_path(current_user), class: "list-group-item" %>
                    </li> -->
                </ul> 
                <ul class="panel-body">
                  <h4>Job Search</h4>
                  <%= render 'layouts/jobsearchform'  %>
                </ul>
                <%= render 'layouts/footer'  %>
            </div>
        </div>

        <div id="center-wrapper" class="col-md-6"><!-- START CENTER COLUMN -->
          <div id="center">
            <h4>FiredUp Job Board</h4>
            <%= link_to 'Post a Job', new_user_jboard_path(current_user)%>
            <% @jboards.order("created_at DESC").each do |jboard| %>
            <div class="panel panel-default">
              <div class="center panel-heading">      
                <h4 class="jboardTitleOverride"><%= jboard.title %></h4>
              </div>
              <div class="panel-body memberPanelOverride">
                  
                <%= jboard.agency %><br>
                <%= "#{jboard.city}, #{jboard.state}" %><br>

                <small class="text-muted">Posted <%= time_ago_in_words(jboard.created_at) %> ago </small>
                <small class="text-muted">in category: <%= jboard.category %></small><br>
                <small><%= link_to 'See Details', jboard_path(jboard) %></small>
                <% if jboard.user == current_user && user_signed_in? %>
                 | <%= link_to 'Edit', edit_jboard_path(jboard) %> | 
                  <%= link_to 'Delete', jboard_path(jboard), method: :delete %>
                <% end %>
              </div> <!-- End panel body -->
            </div>
          <% end %>
          </div>
        </div> <!-- END CENTER COLUMN -->

        <div id="right-wrapper" class="col-md-4"> <!-- Begin right column -->
          <div id="sidebar">
           
          </div>
        </div> <!-- END right COLUMN -->

   
  </div><!-- END BODY CONTAINER --> 