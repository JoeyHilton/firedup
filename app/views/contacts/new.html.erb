
<%= image_tag "alarm.jpg", class: "bg" %>
<div class="container">
  <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <div class="form-horizontal">
                    <div class="body-panel">
                        <h1 class="text-center">Contact Us</h1>
                          <div class="form-group">
                            <span class="col-md-2 text-center"></span>
                            <div class="col-md-8">
                              <%= bootstrap_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                                <%= f.text_field :name, :required => true , placeholder: "Name"%>
                                <%= f.text_field :email, :required => true, placeholder: "Email Address" %>
                                <%= f.text_area :message, :as => :text, :required => true, placeholder:"Enter your message for us here. We will get back to you within 2 business days." %>
                              <div class= "hidden">
                                <%= f.hidden_field :nickname, :hint => 'Leave this field blank!' %>
                              </div>
                              <div class="text-center">
                                </br>
                                <%= f.submit 'Send message', :class=> "btn btn-warning" %>
                              </div>
                              <% end %>
                            </div>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>