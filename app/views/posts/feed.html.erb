                    <li>
                        <%= link_to 'New Task', new_user_task_path(current_user), class: "list-group-item"%>
                    </li>
                    <li>
                        <%= link_to "Show Messages", user_messages_path(current_user), class: "list-group-item" %>
                    </li>      
