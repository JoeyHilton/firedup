
  <%= bootstrap_form_for [@user, @post], html: { multipart: true } do |f| %>

    <%= f.text_area :content, class: 'form-control' %>

    <%= f.file_field :image, label: "Add Image"%>

    <%= f.select :share_with, Post::SHARES, prompt: "Pick one",label: "Share with:" %>

    <%= f.submit class: "btn btn-warning" %>
  <% end %>

