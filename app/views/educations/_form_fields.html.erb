
  <%= bootstrap_form_for [@user, @education], remote: using_modal do |f| %>
    <%= render 'devise/shared/error_messages', object: f.object %>
    <%= f.text_field :school, required: true %>

    
    <%= f.text_field :subject, required: true %>

    
    <%= f.text_field :degree %>

   
    <%= f.text_area :description %>

    
    <%= f.date_select :start_date, :start_year=>1950, required: true  %>

   
    <%= f.date_select :end_date, :start_year=>1950, required: true  %>

    <%= f.submit "Submit", class: "btn btn-warning"%>
  <% end %>
