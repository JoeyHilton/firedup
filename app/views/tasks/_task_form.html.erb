
  <%= bootstrap_form_for [@user, @task], html: { multipart: true } do |f| %>

    <%= f.text_field :title, class: 'form-control' %>

    <%= f.date_field :due_date, label: "Due Date"%>

    <%= f.time_field :due_time, label: "Due Time"%>

    <%= f.select :category, Task::CATEGORY, prompt: "Pick one", label: "Category:" , :selected => 'Everyone'%>

    <%= f.check_box :private, label: "Private Task", value: "true", :checked => 'true' %>

    <%= f.text_area :notes, label: "Notes:"%>

    <%= f.submit class: "btn btn-warning" %>
  <% end %>

