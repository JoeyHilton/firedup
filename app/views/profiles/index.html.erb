

<div class = 'container'>

  <h2>FiredUP Users</h2>

  <% @profile.each do |profile| %>
  <div class="col-md-4">
    <div class="panel panel-default">
        <div class="center panel-heading"
        <h3>profile: <%= profile.up_fname%> <%= profile.up_lname %></h3>
        </div>
        <div class="panel-body">

        <h4>Email: <%= profile.user.email unless profile.user.nil? %></h4>

        <h4><%= link_to 'View Profile', profile_path(profile.id) %></h4>
        </div>
    </div>
  </div>
<% end %>
</div>

