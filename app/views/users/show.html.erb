

<div class="col-md-6 col-md-offset-2">
    <div class="panel panel-default">
      <div class="center panel-heading">      
        <h1> <%= "#{@user.first_name}'s Profile" %> </h1>
        <% if @user.followed_by?(current_user) %>
  <%= link_to "Connected", connect_path(user: @user),  class: "btn btn-primary disabled" %>
<% else %>
  <%= link_to "Connect", connect_path(user: @user),  class: "btn btn-primary" %>
<% end %>
      </div>
      <div> <%= link_to "New Message", new_message_path(@user) %>
      <%= link_to "Show Messages", message_path() %> 
      
      </div>
      <div class="panel-body">
          <%= link_to image_tag(@user.image.url(:med)), @user.image.url, class: "pull-right" %>
          <strong> Name: </strong><br>
            <%= "#{@user.first_name}  #{@user.last_name}" %><br>
          <strong> Address: </strong><br>
            <%= @user.address %><br>
            <%= "#{@user.city}, #{@user.state}, #{@user.zip}" %><br>
          <strong> Twitter:</strong><br>
            <%= @user.twitter %><br>
          <strong> Birthdate:</strong><br>
            <%= @user.birthdate %><br>
          <strong> Phone Numbers:</strong><br>
            Phone: <%= @user.phone %><br>
            Cell Phone: <%= @user.mobile_phone %><br>
          <strong> Gender:</strong><br>
            <%= @user.gender %><br>
          <strong> Secondary Email:</strong><br>
            <%= @user.secondary_email %><br>
          <strong> Bio:</strong><br>
            <%= @user.bio %><br><br>
          <%= link_to 'Back', users_path %> | 
          <% if @user == current_user && user_signed_in? %>
            <%= link_to 'Edit', edit_user_registration_path %>
          <% end %>
        
      </div>
  </div>
</div>