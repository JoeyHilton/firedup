<div class = 'container'>

  <div class="row"> <!-- Start First Row -->

    <div class="col-md-12 text-center headline3">
      <h2>FiredUp Members</h2>
    </div>

  </div> <!-- End First Row -->
  <div class="row">
    <div class="col-md-2"><!-- BEGIN LEFT COLUMN -->
      <ul class="nav nav-pills nav-stacked well">

        <%= render 'layouts/membersearchform'  %>
      
      </ul>
    </div><!-- END LEFT COLUMN -->

    <div class="col-md-6">
      <%= paginate @users %>
      
      <% @users.each do |user| %> <!-- First Loop -->
          <div class="panel panel-default">
            <div class="panel-body memberPanelOverride">
              <h4 class="memberTitleOverride"><strong>
                <%= link_to image_tag(user.image.url(:med)), user_path(user), class: "pull-left smallImage" %>
                <%= link_to "#{user.first_name} #{user.last_name}", user_path(user)%>
              </strong></h4>

                <% user.jobs.each do |job| %> <!-- Second Loop -->
                  <% if job.current_employer == true %>
                    <strong><%= job.position %></strong> - <%= job.company %><br>
                  <% end %>
                <% end %> <!-- End Second Loop -->

              <%= "#{user.city}, #{user.state}" %><br>
              <small class="text-muted">Member since: <%= user.created_at.strftime("%B %Y") %></small><br><br>

            </div> <!-- End Panel body-->
          </div> <!-- END Panel default -->
      <% end %> <!-- End First Loop -->
           <%= paginate @users %>   
    </div> <!-- End col -->

    <div class="col-md-4"> <!--BEGIN RIGHT COLUMN -->
      <ul class="nav nav-pills nav-stacked well">
        
      </ul>
    </div>  <!--END RIGHT COLUMN -->
  </div>
</div> <!-- end container -->