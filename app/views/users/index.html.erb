<div class = 'container'>

  <div class="row"> <!-- Start First Row -->

    <div class="col-md-12 text-center headline3">
      <h2>FiredUp Members</h2>
    </div>

  </div> <!-- End First Row -->
  <div class="row">
    <div class="col-md-2"><!-- BEGIN LEFT COLUMN -->
      <ul class="nav nav-pills nav-stacked well">
        Jobs</br></br>
        Education</br></br>
        Certifications</br></br>
      
        <%= link_to "Show Messages", user_messages_path(current_user) %>
      </ul>
    </div><!-- END LEFT COLUMN -->

    <div class="col-md-6">
      <% @users.each do |user| %> <!-- First Loop -->
          <div class="panel panel-default">
            <div class="center panel-heading">
              <h3 class="memberTitleOverride">
                <%= user.first_name%> <%= user.last_name%>
              </h3>

            </div>  
            <div class="panel-body memberPanelOverride">
              <%= link_to image_tag(user.image.url(:small)), user.image.url, class: "pull-left smallImage" %>

                <% user.jobs.each do |job| %> <!-- Second Loop -->
                  <% if job.current_employer == true %>
                    <strong><%= job.position %></strong> - <%= job.company %><br>
                  <% end %>
                <% end %> <!-- End Second Loop -->

              <%= "#{user.city}, #{user.state}" %><br>
              Member since: <%= user.created_at.strftime("%B %Y") %><br><br>


              <p>
                <%= link_to 'View Profile', user_path(user.id) %>
                <% if user == current_user && user_signed_in? %>
                 | <%= link_to 'Edit Profile', edit_user_registration_path %>
                <% end %>
              </p>
              
            </div> <!-- End Panel body-->
          </div> <!-- END Panel default -->
      <% end %> <!-- End First Loop -->
    </div> <!-- End col -->

    <div class="col-md-4"> <!--BEGIN RIGHT COLUMN -->
      <ul class="nav nav-pills nav-stacked well">
        
      </ul>
    </div>  <!--END RIGHT COLUMN -->
  </div>
</div> <!-- end container -->