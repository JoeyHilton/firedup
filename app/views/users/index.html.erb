<div class = 'container'>

  <h2>FiredUP Users</h2>

  <% @users.each do |user| %>
  <div class="col-md-4">
    <div class="panel panel-default">
        <div class="center panel-heading">
          <h4><%= user.first_name%> <%= user.last_name%></h4>
         
        </div>
        <div class="panel-body">

        <h4>Email: <%= user.email unless user.nil? %></h4>

        <h5><%= link_to 'View Profile', user_path(user.id) %></h5>
        <% if user == current_user && user_signed_in? %>
        <h5><%= link_to 'Edit Profile', edit_user_registration_path %></h5>
        <% end %>
        </div>
    </div>
  </div>
<% end %>
</div>

