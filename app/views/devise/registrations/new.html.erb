
<div class="container">

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
    <h1 class="text-center headline">Get Yourself FiredUp!</h1>
    <br>
    </div>
  </div>

  <div class="row">

    <div class="col-md-7"><!-- LEFT COLUMN --> 
      <!-- <img src="/assets/home-page-image.jpg" alt="its an image" class="img-thumbnail"> -->
    </div><!-- END LEFT COLUMN -->

    <div class="col-md-5"> <!-- RIGHT COLUMN -->
      <div class="panel panel-default">
        <div class="panel-body">

          <h2><strong> Start Now!</strong></h2>
          <h4> Its free...</h4>
          <br>

          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true })   do |f| %>
            <%= devise_error_messages! %>
              
              <%= f.email_field :email, autofocus: true %>
          
              <%= f.password_field :password, autocomplete: "off", placeholder: "Eight Characters Minimum" %>

              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Eight Characters Minimum" %>

              <button class='btn btn-warning' type='submit'>
                  <%= fa_icon("fire", text: "Get Fired Up!") %>
              </button>
          <% end %>
          <br>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div><!-- END RIGHT COLUMN -->
</div>



          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
