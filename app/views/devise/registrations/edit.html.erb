<div class="container">

  <div class="row col-md-12">
    <h1 class="text-center"><strong>Edit Your Log In Info</strong></h1>
    <br>
  </div>

  <div class="row">

    <div class="col-md-5"><!-- LEFT COLUMN --> 

        divise/registrations/edit
        <!-- <%= resource_name.to_s.humanize %> -->

        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

            <%= f.email_field :email, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

            <%= f.password_field :password, autocomplete: "off", label: "New Password"%>

            <%= f.password_field :password_confirmation, autocomplete: "off", label: "New Password Confirmation" %>
     
            <%= f.password_field :current_password, autocomplete: "off", label: "Current Password - Needed to make changes" %>

            <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
        <br>

        <%= link_to "Go Back", :back, class: "btn btn-primary" %>
      
  </div><!-- END LEFT COLUMN -->

  <div class="col-md-7"> <!-- RIGHT COLUMN -->


    <h3>Cancel my account</h3>

        <h4>Unhappy?</h4>  
        <p>We are sorry to see you go, but all you have to do to cancel your account is click the 
            button below.</p> 
        <%= button_to "Cancel My Account", registration_path(resource_name),
                      data: { confirm: "Are you sure?" }, method: :delete,
                      class: "btn btn-danger" %>
    <br>

  </dv><!-- END RIGHT COLUMN -->

</div>


