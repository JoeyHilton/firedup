
<div class="col-md-6 col-md-offset-2">
    <div class="panel panel-default">
      <div class="center panel-heading">      
        <h1> Experience </h1>
      </div>
      <div class="panel-body">
          <strong> Position: </strong><br>
              <%= @job.position%><br>
          <strong> Company: </strong><br>
              <%= @job.company %><br>
          <strong> Time at Job: </strong><br>
          <%= "From: #{@job.start_date} until: #{@job.end_date}" %><br>
          <strong> Description: </strong><br>
              <%= @job.description %><br><br>
          <%= link_to 'Back', profile_path %> | 
          <%= link_to 'Edit', edit_job_path(@job), remote: true %> | 
          <%= link_to 'Delete', @job, method: :delete %>
        
      </div>
  </div>
</div>